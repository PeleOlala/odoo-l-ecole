<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_hospital_patient_fill_multi_wizard_view_form" model="ir.ui.view">
        <field name="name">hr_hospital_3.fill_doctor_wizard.view.form</field>
        <field name="model">hr_hospital_3.fill_doctor_wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="doctor_id" options="{'no_create': True}"/>
                        <field name="patient_ids" invisible="True" options="{'no_create': True}" widget="many2many_tags"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_fill"
                            string="Apply"
                            type="object"
                            icon="fa-plus"
                            class="btn-primary"/>
                    <button special="cancel" class="oe_link" string="Close"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fill_doctor_multi_wizard" model="ir.actions.act_window">
        <field name="name">Fill doctor personal</field>
        <field name="res_model">hr_hospital_3.fill_doctor_wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_hr_hospital_3_patient"/>
        <field name="binding_view_types">list</field>
        <field name="binding_type">action</field>
    </record>

    <record id="server_action_create_partner_multi_wizard" model="ir.actions.server">
        <field name="name">Apply doctor</field>
        <field name="model_id" ref="model_hr_hospital_3_fill_doctor_wizard"/>
        <field name="state">code</field>
        <field name="code">
            action = model.action_open_wizard()
        </field>
    </record>

</odoo>
